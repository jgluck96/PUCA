<h1 style="margin-left:.5%;">Login</h1>

<h4><%= flash[:notice] %></h4>

<%= form_tag(login_path) do %>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <div class="field">
  <%= label_tag 'Username ' %>
  <div class="ui left icon input">
  <%= text_field_tag :username %><br>
  <i class="user icon"></i>
</div>
</div>
<div class="field">
  <%= label_tag 'Password ' %>
  <div class="ui left icon input">
  <%= password_field_tag :password %><br>
<i class="lock icon"></i>
</div>
</div>
  <div class="ui blue submit button"><%= submit_tag 'Login', :class=>"loginlink"%></div>
</div>
</div>
<% end %>
<div class="middle aligned column">
<div class="ui big button">
  <i class="signup icon"></i>
  <%= button_to 'Sign Up',new_user_path, method: :get, :class=>"loginlink" %>
