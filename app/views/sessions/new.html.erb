<h1>Login</h1>

<h4><%= flash[:notice] %></h4>

<%= form_tag(login_path) do %>
  <%= label_tag 'Username: ' %>
  <%= text_field_tag :username %><br>

  <%= label_tag 'Password: ' %>
  <%= password_field_tag :password %><br>

  <%= submit_tag 'Login' %><br>
  <%= button_to 'Sign Up', new_user_path, method: :get %>
<% end %>
