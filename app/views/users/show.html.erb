<h2>My Projects</h2>
<br>
<% if @admins != [] %>
<ul>
  <% @projects.each do |proj| %>
    <li><%= link_to proj.title, proj %></li>
    <% if current_user.id == @user.id %>
      <%= button_to "edit", edit_project_path(proj), method: :get %>
      <%= button_to "delete", proj, method: :delete, data: { confirm: 'Are you sure?' } %><br>
    <% end %>
  <% end %>
</ul>
<% else %>
  <%= "I don't have any projects." %>
<% end %>

<br>
<br>


<h3>Collaborating On:</h3>
<br>
<% if @collaborations != [] %>
  <ul>
    <% @collabs.each do |collab| %>
      <li><%= link_to collab.title, collab %></li>
    <% end %>
  </ul>
<% else %>
  <%= "I'm not currently contributing to other projects." %>
<% end %>

