<h1 style="text-align:center;"><%= @project.title %></h1>

<br>
<br>

<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<h4>Administrators</h4>
<% @admins.each do |admin| %>
  <%= link_to admin.username, user_path(admin) %>
<% end %>

<br>

<h4>Collaborators</h4>
<ul>
<% @collabs.each do |collab| %>
  <li><%= link_to collab.username, user_path(collab) %></li>

  <% if @admin_id && current_user.id == @admin_id.user_id %>
    <%= button_to "delete collaborator", Collaboration.find_by(project_id: @project.id, user_id: collab.id), method: :delete, data: { confirm: 'Are you sure?' } %><br>
  <% end %>
<% end %>
</ul>

<h4>Project Description</h4>
<%= @project.description %>

<br>
<br>

<h4>Tech Stack</h4>
<ul>
  <% @tech_stack.each do |l| %>
    <li><%= l %></li>
  <% end %>
</ul>

<br>
<br>
<br>


<%= button_to "Collaborate on #{@project.title}", "/collaborate", method: :post, params: {project_id: @project.id, admin_id: @project.administrations.first.user_id}%>
