<!DOCTYPE html>
<html>
  <head>
    <title>PUCA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <% if logged_in? %>
    <div class="topnav">
  <a class="active" href="/">Home</a>
  <a href="/projects">Open Projects</a>
  <a href="/showcase">Completed Projects</a>
  <a href="/projects/new">New Project</a>
  <%= link_to 'Account', user_path(current_user.id), method: :get %>
  <%= link_to 'Logout', logout_path, method: :delete %>
</div>
    <% else %>
    <div class="topnav">
  <a class="active" href="/">Home</a>
  <a href="/projects">Open Projects</a>
  <a href="/showcase">Completed Projects</a>
  <%= link_to 'Login', login_path, method: :get %>
  <%= link_to 'Sign Up', new_user_path, method: :get %>
</div>
  <% end %>
    <%= yield %>
  </body>
</html>
